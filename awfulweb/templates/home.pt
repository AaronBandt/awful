<div metal:use-macro="layout">
    <div metal:fill-slot="content">

      <script src="/static/jquery-2.1.3.min.js"></script>
      <script>
        $(window).load(function(){
                var pages = $('#results li'), current=0;
                var currentPage,nextPage;
                var handler=function(){
                    $('#results .button').unbind('click');
                    currentPage= pages.eq(current);
                    if($(this).hasClass('prevButton'))
                    {
                        if (current <= 0)
                            current=pages.length-1;
                        else
                            current=current-1;
                        nextPage = pages.eq(current);

                        nextPage.css("marginLeft",-400);
                        nextPage.show();
                        nextPage.animate({ marginLeft: 0 }, 800,function(){
                            currentPage.hide();
                        });
                        currentPage.animate({ marginLeft: 400 }, 800,function(){
                            $('#results .button').bind('click',handler);
                        });
                    }
                    else
                    {

                        if (current >= pages.length-1)
                            current=0;
                        else
                            current=current+1;
                        nextPage = pages.eq(current);

                        nextPage.css("marginLeft",400);
                        nextPage.show();
                        nextPage.animate({ marginLeft: 0 }, 800,function(){
                        });
                        currentPage.animate({ marginLeft: -400 }, 800,function(){
                            currentPage.hide();
                            $('#results .button').bind('click',handler);
                        });
                    }
                }

                $('#results .button').click(handler);

        });
      </script>


      <div tal:condition="not has_reviews">
        <a href="/ratings">Rate something AWFUL</a> to get started.
      </div>

      <div tal:condition="has_reviews and not display">
        <h2>Go eat something AWFUL with these people</h2>

        <form id="whereto" action="/" method="POST">
        <div class="user_cb row" tal:condition="has_reviews" tal:repeat="user all_users">
          <input id="user_${user.user_id}" type="checkbox" name="included" value="${user.user_name}">
          <label for="user_${user.user_id}">${user.first_name} ${user.last_name}</label>
        </div>
        <div id="whereto_submit">
          <input class="button" type="submit" name="whereto_submit" value="Where to?"/>
          <input type="hidden" id="whereto_submitted" name="whereto_submitted"/>
        </div>
        </form>
      </div>

      <div id="results_container" tal:condition="display">
        <div id="results_header">
          <h2>Go eat someplace AWFUL</h2>
          <span class="results_restart">
            <form name="start_over" id="start_over" method="GET" action="/">
            <input class="button" type="submit" name="submit" value="Start Over"/>
            </form>
          </span>
        </div>
        <div id="results_container_inner">
          <div id="results">
            <ul>
              <li tal:repeat="item results"><span id="result_title">${item.Rating.place.name}</span> <span id="result_rating">(${item.average})</span></li>
            </ul>
            <input class="button prevButton" type="submit" name="previous" value="Wait..."/>
            <input class="button nextButton" type="submit" name="next" value="Gross..."/>
          </div>
        </div>
        <div id="results_container_lower">
        </div>
      </div>


  </div>
</div>
